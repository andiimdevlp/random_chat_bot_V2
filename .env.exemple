# Credenciais do Telegram
BOT_TOKEN=seu_token_aqui
API_ID=seu_api_id
API_HASH=seu_api_hash

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///bot.db
DATA_DIR=./data

# Log
LOG_LEVEL=info

# Privacidade - para salvar ou não as mensagens dos usuários
PRIVACY_STORE_MESSAGE_CONTENT=true

# Timeouts (em segundos)
PAIRING_TIMEOUT_SECONDS=900
QUEUE_MAX_WAIT_SECONDS=900

# Administradores (IDs separados por vírgula)
ADMINS=123456789,987654321

# Suporte
BAN_APPEAL_CONTACT=https://t.me/seu_usuario